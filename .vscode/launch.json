{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pytest: Run all tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-s",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest: Current file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-s",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}